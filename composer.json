{
    "name": "cyruscollier/wp-test",
    "description": "A framework for running unit and integration tests on WordPress",
    "keywords": ["wordpress", "test-driven development", "phpspec", "phpunit"],
    "homepage": "http://github.com/cyruscollier/wp-spark",
    "type": "library",
    "authors": [
        {
            "name": "Cyrus Collier",
            "email": "web@cyruscollier.com",
            "homepage": "http://www.collierwebdesign.com"
        }
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.cyruscollier.com/"
        }
    ],
    "require": {
        "wordpress/wordpress": "^5.3.2",
        "phpspec/phpspec": "^6.1.1",
        "cyruscollier/phpspec-php-mock": "^2.0.0",
        "phpunit/phpunit": "^7.5.18"
    },
    "autoload": {
        "psr-4": {
            "WPTest\\": "src/"
        }
    },
    "bin": ["bin/wp-test"]
}
