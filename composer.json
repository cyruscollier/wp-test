{
    "name": "cyruscollier/wp-test",
    "description": "A framework for running unit and integration tests on WordPress",
    "keywords": ["wordpress", "test-driven development", "phpspec", "phpunit"],
    "homepage": "http://github.com/cyruscollier/wp-spark",
    "type": "library",
    "authors": [
        {
            "name": "Cyrus Collier",
            "email": "web@cyruscollier.com",
            "homepage": "http://www.collierwebdesign.com"
        }
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "package",
            "package": {
                "version": "dev-external-testing",
                "name": "cyruscollier/wordpress-develop",
                "dist": {
                    "url": "https://github.com/cyruscollier/wordpress-develop/archive/external-testing.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "cyruscollier/wordpress-develop": "dev-external-testing",
        "phpspec/phpspec": "~4.3",
        "cyruscollier/phpspec-php-mock": "^2.0.0",
        "phpunit/phpunit": "^6.5.7"
    },
    "autoload": {
        "psr-4": {
            "WPTest\\": "src/"
        },
        "files": ["src/stubs.php"]
    },
    "bin": ["bin/wp-test"]
}
